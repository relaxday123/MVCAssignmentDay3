@model Person
@{
    ViewData["Title"] = "Create New Member";
}

<div>
    <h1 class="display-4 text-center">@ViewData["Title"]</h1>
    <form method="post">
        <div class="form-group">
            <label >First Name</label>
            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
        </div>
        <div class="form-group">
            <label >Last Name</label>
            <input asp-for="LastName" class="form-control" placeholder="Enter first name" />
        </div>
        <div class="form-group">
            <label >Gender</label>
            <select class="form-control" asp-for="Gender">
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>
        </div>
        <div class="form-group">
            <label >Date Of Birth</label>
            <input asp-for="DateOfBirth" type="date" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Enter phone number" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
